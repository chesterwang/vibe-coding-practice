{
  "manifest_version": 3,
  "name": "GitHub Markdown Merger",
  "version": "1.0",
  "description": "从GitHub仓库提取所有Markdown文件并合并为一个。",
  "action": {
    "default_title": "点击合并Markdown文件"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ]
}
